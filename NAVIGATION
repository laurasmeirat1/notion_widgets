	<nav class="navMenu background border">
		<a id="home" onclick="navigate(this.id)" href="#"> <i class="fa-solid fa-house"></i></a>
	        <a id="studylog" onclick="navigate(this.id)" href="#"> Study Log </a>
                <a id="weeklyplan" onclick="navigate(this.id)" href="#"> Weekly Plan</a>
                <a id="resources" onclick="navigate(this.id)" href="#"> Resources </a>
                <a id="languages" onclick="navigate(this.id)" href="#">  Languages</a>
                <a id="goals" onclick="navigate(this.id)" href="#"> Goals </a>
	</nav>


	<script>

		let direction = "horizontal";
		if (direction === "vertical") {
			document.head.insertAdjacentHTML("beforeend", `<style>.navMenu a {display: block; text-align:left; margin:7px} i{width:15px; margin-right:5px} .navMenu{margin:3px}</style>`)
		}


		function navigate(id) {

			if (id == 'home')
				window.open("https://example.com", '_blank').focus();
			else if (id == "studylog")
				window.open("https://www.notion.so/81a83c7ccdff498f8c2d822cb8ea7c26?v=a73b1c68ccfa49eeba1113adaeadf9b8&pvs=4", '_blank').focus();
			else if (id == "weeklyplan")
				window.open("https://www.notion.so/Weekly-Plan-71a141d2840146869e2b8f4e3261dcb9?pvs=4", '_blank').focus();
                        else if (id == "resources")
				window.open("https://www.notion.so/162036ca33224a2d8d0eee58c8d08173?v=a722b886490f45f58e198a08f0553bdb&pvs=4", '_blank').focus();
                        else if (id == "languages")
				window.open("https://www.notion.so/Languages-cbec1fd161ef4e63abfa4507d6699501?pvs=4", '_blank').focus();
                        else if (id == "goals")
				window.open("https://www.notion.so/Goals-7d79a19e86cd41739f225a9728a84271?pvs=4", '_blank').focus();
		}
	</script>


